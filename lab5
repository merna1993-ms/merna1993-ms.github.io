<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Simple Registration (Beginner)</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>body{background:#f8f9fb} .card{max-width:640px; margin:2rem auto}</style>
</head>
<body>
  <div class="card shadow-sm">
    <div class="card-body">
      <h4 class="mb-3">Register for My Product</h4>
      <div id="msg" class="alert d-none" role="alert"></div>

      <form id="form" class="row g-2">
        <div class="col-sm-6"><input id="first" class="form-control" placeholder="First Name"/></div>
        <div class="col-sm-6"><input id="last" class="form-control" placeholder="Last Name"/></div>
        <div class="col-sm-6"><input id="email" class="form-control" type="email" placeholder="Email"/></div>
        <div class="col-sm-6"><input id="pass" class="form-control" type="password" placeholder="Password (! or ?)"/></div>
        <div class="col-sm-6"><input id="dob" class="form-control" type="date"/></div>
        <div class="col-12"><button class="btn btn-primary" type="submit">Submit</button></div>
      </form>

      <div id="out" class="mt-3 d-none">
        <h6>Registration Result</h6>
        <pre id="data" class="mb-0"></pre>
      </div>

      <p class="text-muted small mt-3 mb-0">Rules: all fields required. Password must include <code>!</code> or <code>?</code>. We display the password as the same number of <b>*</b>.</p>
    </div>
  </div>

  <script>
    const $ = id => document.getElementById(id);
    const form = $('form');

    function mask(s){ return '*'.repeat(s.length); }

    form.addEventListener('submit', (e)=>{
      e.preventDefault();
      const user = {
        first: $('first').value.trim(),
        last: $('last').value.trim(),
        email: $('email').value.trim(),
        pass: $('pass').value,
        dob: $('dob').value
      };

      let ok = true, note = 'Registration Successful!';
      if(!user.first || !user.last || !user.email || !user.pass || !user.dob){ ok=false; note='All fields must be present.'; }
      if(ok && !(user.pass.includes('!') || user.pass.includes('?'))){ ok=false; note='Password must contain ! or ?'; }

      const display = {First:user.first, Last:user.last, Email:user.email, Password:mask(user.pass), DOB:user.dob};
      $('out').classList.remove('d-none');
      $('data').textContent = JSON.stringify(display, null, 2);

      const box = $('msg');
      box.className = 'alert ' + (ok ? 'alert-success' : 'alert-danger');
      box.textContent = ok ? note : 'Registration Failed: ' + note;
      box.classList.remove('d-none');
    });
  </script>
</body>
</html>
